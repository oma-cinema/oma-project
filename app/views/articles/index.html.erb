<section id="section1" class="cd-section">
  <div class="container flex-column justify-content-center">
    <div class="row flex-column">
      <h1 class="pb-5">Press Articles</h1>
    </div>
      <div class="d-flex">
      <% array = [] %>
        <% @articles.each do |article| %>
          <% article.tag_list.each do |tage| %>
            <% array << tage %>
          <% end %>
        <% end %>
      <% array.uniq.each do |tag| %>
        <h2 class="mr-4 btn btn-danger"><%= link_to tag, articles_path(tag: tag) %></h2>
      <% end %>
      </div>
    <div class="row d-flex justify-content-center align-items-center mt-5" style=" height: 28%">
          <ul class="d-flex flex-column article-list text-left">
            <% @articles.first(4).each do |article| %>
              <li>
                <h4><%= link_to article.title, article_path(article) %> <p>(<%= article.date.strftime("%d of %B, %Y") %>)</p></h4>
              </li>



            <% end %>
          </ul>
    </div>
  </div>
</section>

